{
  "compilerOptions": {
    /* Target and Environment */
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler", // Allows importing without .js extensions
    "types": ["node"],
    
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",

    /* Modules and Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    
    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* Emit Logic */
    "noEmit": false, // Change to true if using a runner like 'tsx' exclusively
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    /* Style/Cleanliness */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}